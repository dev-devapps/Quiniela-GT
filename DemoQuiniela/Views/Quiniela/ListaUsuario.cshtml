@model MvcQuiniela.ViewModel.QuinielaViewModel
@{
    TempData["DatosLogin"] = ViewBag.DatosLogin;

    ViewBag.Title = "Lista de usuario";
    Layout = "~/Views/Shared/_LayoutQuiniela.cshtml";
    string estado = "";
    string descEstado = "";

}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <!-- Basic Examples -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Usuarios
                        </h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="~/Quiniela/IngresoUsuario"/>Crear usuario</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                <thead>
                                    <tr>
                                        <th>Nombres</th>
                                        <th>Apellidos</th>
                                        <th>Correo electronico</th>
                                        <th>Identificacion</th>
                                        <th>Estado</th>
                                        <th> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.vm_usuarios.Count(); i++)
                                    {
                                        estado = Model.vm_usuarios.ElementAt(i).us_estado;
                                        switch (estado)
                                        {
                                            case "V":
                                                descEstado = "Vigente";
                                                break;
                                            case "B":
                                                descEstado = "Bloqueado";
                                                break;
                                            default:
                                                descEstado = "Indefinido";
                                                break;
                                        }
                                        <tr>
                                            <td>@Model.vm_usuarios.ElementAt(i).us_primerNombre</td>
                                            <td>@Model.vm_usuarios.ElementAt(i).us_primerApellido</td>
                                            <td>@Model.vm_usuarios.ElementAt(i).us_correoElectronico</td>
                                            <td>@Model.vm_usuarios.ElementAt(i).us_cui</td>
                                            <td>@descEstado</td>
                                            <td>
                                                <a href="~/Quiniela/ListaAlias/@Model.vm_usuarios.ElementAt(i).us_id" class="btn btn-warning waves-effect" data-toggle="tooltip" title="Alias"><i class="material-icons">assignment_ind</i></a>
                                                <a href="~/Quiniela/EditarUsuario/@Model.vm_usuarios.ElementAt(i).us_id" class="btn btn-info waves-effectt"  data-toggle="tooltip" title="Editar"><i class="material-icons">mode_edit</i></a>
                                            </td>
</tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Basic Examples -->
